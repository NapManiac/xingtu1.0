<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#6cf"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6cf"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="新建任务"
            android:textAlignment="center"
            android:textColor="@color/xui_config_color_white"
            android:textSize="22dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:text="任务名"
        android:textSize="16sp" />

    <com.xuexiang.xui.widget.edittext.MultiLineEditText
        android:id="@+id/et_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        app:mlet_hintText="请输入任务名"
        app:mlet_contentViewHeight="40dp"
        app:mlet_maxCount="10"
        app:mlet_showSurplusNumber="false">

    </com.xuexiang.xui.widget.edittext.MultiLineEditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="任务详情"
        android:textSize="16sp" />

    <com.xuexiang.xui.widget.edittext.MultiLineEditText
        android:id="@+id/et_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        app:mlet_contentViewHeight="40dp"
        app:mlet_hintText="请输入任务详情"
        app:mlet_maxCount="30"
        app:mlet_showSurplusNumber="false">

    </com.xuexiang.xui.widget.edittext.MultiLineEditText>


    <LinearLayout
        android:id="@+id/btn_time_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_timepicker"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="开始时间"
            android:textColor="@color/xui_config_color_white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="日期：--年--月--日"
                android:textColor="@color/xui_config_color_75_white" />

            <TextView
                android:id="@+id/tv_task_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="时间：--时--分"
                android:textColor="@color/xui_config_color_75_white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_timepicker"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="结束时间"
            android:textColor="@color/xui_config_color_white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="日期：--年--月--日"
                android:textColor="@color/xui_config_color_75_white" />

            <TextView
                android:id="@+id/tv_task_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="时间：--时--分"
                android:textColor="@color/xui_config_color_75_white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            style="@style/RoundButton.Blue"
            android:padding="10dp"
            android:text="创建任务" />
    </LinearLayout>

</LinearLayout>